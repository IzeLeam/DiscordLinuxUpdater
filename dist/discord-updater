#!/bin/bash

set -e

usage() {
    echo "Usage: $0 [OPTION]"
    echo "Options:"
    echo "  -h, --help      Display this help message."
    echo "  -v, --version   Display the version of the script."
    exit 0
}

version() {
    echo "Discord Updater v1.1.1"
    exit 0
}

if [ $# -gt 0 ]; then
    case "$1" in
        -h|--help)
            usage
            ;;
        -v|--version)
            version
            ;;
        *)
            echo "Invalid option: $1"
            usage
            ;;
    esac
fi
    
discord_executing=false
DISCORD_URL="https://discord.com/api/download?platform=linux&format=deb"
TMP_FILE="/tmp/discord.deb"
LOG_FILE="/var/log/discord-updater.log"

log() {
    echo "$(date +'%Y-%m-%d %H:%M:%S') - $1" | tee -a $LOG_FILE
}

err_log() {
    log "[ERROR] $1"
}

check_root() {
    if [ "$EUID" -ne 0 ]; then
        err_log "Please run as root"
        exit 1
    fi
}

kill_discord() {
    if pgrep -x "Discord" > /dev/null; then
        discord_executing=true
        log "Discord is running, closing it..."
        pkill -x "Discord"
        sleep 2
    fi
}

restart_discord() {
    if $discord_executing; then
        log "Restarting discord..."
        discord &
    fi
}

download_discord() {
    log "Downloading discord last version..."
    if ! wget -O "$TMP_FILE" "$DISCORD_URL" > /dev/null 2>&1; then
        err_log "Failed to download discord."
        exit 1
    fi
}

install_discord() {
    log "Installing/Updating discord...."

    # Tenter l'installation
    if apt install -y "$TMP_FILE" > /dev/null 2>&1; then
        log "Discord has been installed/updated successfully."
    else
        # Vérifier si le message d'erreur correspond à un paquet déjà à jour
        if apt install -y "$TMP_FILE" 2>&1 | grep -q "is already the newest version"; then
            log "Discord is already up-to-date."
        else
            err_log "Failed to install/update discord."
            exit 1
        fi
    fi
}

remove_discord_tmp_file() {
    log "Removing discord tempory file at $TMP_FILE..."
    if ! rm "$TMP_FILE"; then
        err_log "Failed to remove temp discord file."
    fi
}

main() {
    check_root

    kill_discord
    
    download_discord
    install_discord
    remove_discord_tmp_file
    
    restart_discord
    exit 0
}

main "$@"